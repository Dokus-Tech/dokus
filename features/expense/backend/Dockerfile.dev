FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

# Copy the fat JAR
COPY features/expense/backend/build/libs/backend-1.0.0.jar /app/expense-service.jar

# Create logs directory
RUN mkdir -p /app/logs

# Expose application port and debug port
EXPOSE 9093 5010

# Run with debug enabled
ENTRYPOINT ["java", "-Xms256m", "-Xmx512m", "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5010", "-jar", "/app/expense-service.jar"]
