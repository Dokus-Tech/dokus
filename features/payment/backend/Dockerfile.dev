FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

# Install curl for healthcheck
RUN apk add --no-cache curl

# Copy the fat JAR
COPY features/payment/backend/build/libs/backend-1.0.0.jar /app/payment-service.jar

# Create logs directory
RUN mkdir -p /app/logs

# Expose application port and debug port
EXPOSE 8080 5005

# Run with debug enabled
ENTRYPOINT ["java", "-Xms256m", "-Xmx512m", "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005", "-jar", "/app/payment-service.jar"]
