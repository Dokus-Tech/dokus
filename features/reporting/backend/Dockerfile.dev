FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

# Copy the fat JAR
COPY features/reporting/backend/build/libs/backend-1.0.0.jar /app/reporting-service.jar

# Create logs directory
RUN mkdir -p /app/logs

# Expose application port and debug port
EXPOSE 9095 5012

# Run with debug enabled
ENTRYPOINT ["java", "-Xms256m", "-Xmx512m", "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5012", "-jar", "/app/reporting-service.jar"]
