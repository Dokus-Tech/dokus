# Development Dockerfile - expects JAR to be pre-built
FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

# Install curl for healthcheck and additional dev tools
RUN apk add --no-cache curl bash

# Create non-root user
RUN addgroup -g 1001 -S appuser && adduser -u 1001 -S appuser -G appuser

# Copy the pre-built JAR (using wildcard to avoid version hardcoding)
COPY features/processor/backend/build/libs/backend-*.jar app.jar

# Copy all resources (configs, migrations, etc.)
COPY features/processor/backend/src/main/resources/ ./resources/

# Create directories for logs
RUN mkdir -p /app/logs && chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Expose service port (8080) and debug port (5005)
EXPOSE 8080 5005

# Health check for dev
HEALTHCHECK --interval=30s --timeout=3s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

# Run the application with dev-specific JVM options
# The config file will be selected based on ENVIRONMENT variable
ENTRYPOINT ["java", \
  "-Xms256m", \
  "-Xmx512m", \
  "-XX:+UseG1GC", \
  "-XX:MaxGCPauseMillis=100", \
  "-Dconfig.override_with_env_vars=true", \
  "-Dlogback.configurationFile=resources/logback.xml", \
  "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005", \
  "-jar", \
  "app.jar"]
