<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Processor service loggers -->
    <logger name="ai.dokus.processor" level="DEBUG"/>

    <!-- Extraction loggers -->
    <logger name="ai.dokus.processor.backend.extraction" level="DEBUG"/>

    <!-- Worker loggers -->
    <logger name="ai.dokus.processor.backend.worker" level="DEBUG"/>

    <!-- Foundation loggers -->
    <logger name="ai.dokus.foundation" level="INFO"/>

    <!-- Ktor loggers -->
    <logger name="io.ktor" level="INFO"/>
    <logger name="io.ktor.client" level="INFO"/>

    <!-- Database loggers -->
    <logger name="Exposed" level="INFO"/>
    <logger name="org.jetbrains.exposed" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- MinIO loggers -->
    <logger name="io.minio" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
