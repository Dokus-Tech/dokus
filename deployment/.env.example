# Dokus Cloud Environment Configuration
# Copy this file to .env and fill in your values
# This configuration is for cloud/production deployments

# ============================================================================
# CRITICAL: Required Environment Variables
# ============================================================================

# Database Configuration
DB_USERNAME=dokus
DB_PASSWORD=your-secure-database-password-here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here

# RabbitMQ Configuration
RABBITMQ_USERNAME=dokus
RABBITMQ_PASSWORD=your-secure-rabbitmq-password-here

# JWT Configuration (Auth Service)
JWT_SECRET=your-super-secret-jwt-key-at-least-64-characters-long-please-change-this
JWT_ISSUER=https://dokus.tech
JWT_AUDIENCE=dokus-api

# Caching Configuration (CRITICAL - Required!)
# Options: "redis" (recommended for cloud) or "memory" (local dev only)
CACHE_TYPE=redis

# Security - CORS Configuration
# NOTE: CORS hosts are configured in application-cloud.conf for each service
# Edit the .conf files directly to customize allowed hosts per deployment

# Security - API Keys
MONITORING_API_KEY=your-monitoring-api-key-change-this
ADMIN_API_KEY=your-admin-api-key-change-this
INTEGRATION_API_KEY=your-integration-api-key-change-this

# Security - Request Signing
REQUEST_SIGNING_ENABLED=true
REQUEST_SIGNING_SECRET=your-request-signing-secret-at-least-32-chars

# Logging
LOG_LEVEL=INFO

# ============================================================================
# OPTIONAL: Advanced Configuration
# ============================================================================

# Email Configuration (Optional - for notifications)
# Note: You can modify these values after deployment in your .env file
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@dokus.tech
SMTP_PASSWORD=your-smtp-password
SMTP_ENABLE_TLS=true
SMTP_ENABLE_AUTH=true
EMAIL_FROM_ADDRESS=noreply@dokus.tech
EMAIL_FROM_NAME=Dokus
EMAIL_REPLY_TO_ADDRESS=support@dokus.tech
EMAIL_REPLY_TO_NAME=Dokus Support
EMAIL_BASE_URL=https://dokus.tech
EMAIL_SUPPORT_ADDRESS=support@dokus.tech

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Metrics & Monitoring (Optional)
METRICS_ENABLED=true
METRICS_PORT=7090
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# GeoIP Database (Optional)
GEOIP_ENABLED=true
GEOIP_DATABASE_PATH=features/auth/backend/src/main/resources/GeoLite2-City.mmdb
